/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    int kthSmallest(TreeNode* root, int k) {
        stack<TreeNode*>    toVisit;
        int cnt = 0;
        TreeNode* p = root;
        while(p || !toVisit.empty())
        {
            while(p)
            {
                toVisit.push(p);
                p = p->left;
            }
            
            p = toVisit.top();
            toVisit.pop();
            cnt++;
            if(cnt == k)
                return p->val;
            
            p = p->right;
        }
        
        return 0;
    }
};

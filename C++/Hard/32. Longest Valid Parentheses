class Solution {
public:
    int longestValidParentheses(string s) {
        int res = 0;
        if(s.size() < 2)    return res;
        stack<int>  st;
        for(int i = 0;i < s.size();i++)
        {
            if(s[i] == '(') 
                st.push(i);
            else
            {
                if(st.empty())
                    st.push(i);
                else
                {
                    if(s[st.top()] == '(')
                    {
                        st.pop();
                        res = max(res,i - (st.empty() ? -1 : st.top()));
                    }
                    else
                        st.push(i);
                }
            }
        }
        return res;
    }
};
